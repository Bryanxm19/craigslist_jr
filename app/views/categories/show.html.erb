<h1><%= @category.description %></h1>

<% if @category.articles %>
  <ul>
    <% @category.articles.each do |article| %>
      <li><%= article.title %></li>
    <% end %>
  </ul>
<% end %>
<%= link_to 'Back', categories_path %>
<%= link_to 'Edit', edit_category_path(@category) %>
<%= link_to 'Delete', category_path(@category), method: :delete %>
